{
	"compilerOptions": {
		"target": "es2016",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react",
		"sourceMap": true,
		"baseUrl": ".",
	},
	"exclude": [ "node_modules", "build", "scripts" ]
}